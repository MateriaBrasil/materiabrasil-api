{
  "$schema": "http://interagent.github.io/interagent-hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "comment": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "MateriaBrasil - Material",
      "description": "A comment is created by a user at a material, product or service",
      "stability": "prototype",
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "unique identifier of the comment",
          "readOnly": true,
          "type": [
            "integer"
          ]
        },
        "text": {
          "description": "the text of the comment",
          "type": [
            "string"
          ]
        },
        "user_id": {
          "description": "the id of the author of the comment",
          "type": [
            "integer"
          ]
        },
        "commentable_id": {
          "description": "the id of the material, product of service the comment is associated with",
          "type": [
            "integer"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/comment/definitions/id"
            }
          ]
        }
      },
      "links": [
        {
          "description": "Create a new comment.",
          "href": "/comments",
          "method": "POST",
          "rel": "create",
          "schema": {
            "strictProperties": true,
            "properties": {
              "text": {
                "$ref": "#/definitions/comment/definitions/text"
              },
              "commentable_id": {
                "$ref": "#/definitions/comment/definitions/commentable_id"
              }
            },
            "type": [
              "object"
            ]
          },
          "targetSchema": {
            "anyOf": [
              {
                "$ref": "#/definitions/comment"
              },
              {
                "$ref": "#/definitions/error"
              }
            ]
          },
          "title": "Create"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/comment/definitions/id"
        },
        "text": {
          "$ref": "#/definitions/comment/definitions/text"
        },
        "user_id": {
          "$ref": "#/definitions/comment/definitions/user_id"
        },
        "commentable_id": {
          "$ref": "#/definitions/comment/definitions/commentable_id"
        }
      },
      "additionalProperties": false
    },
    "error": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "MateriaBrasil - Error",
      "description": "An error represents a failed action in the API",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "unique identifier of error",
          "readOnly": true,
          "pattern": "^\\w+$",
          "type": [
            "string"
          ]
        },
        "message": {
          "description": "message of error",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/error/definitions/id"
            }
          ]
        }
      },
      "links": [
        {
          "description": "Info for existing error.",
          "href": "/errors/{(%23%2Fdefinitions%2Ferror%2Fdefinitions%2Fidentity)}",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "$ref": "#/definitions/error"
          },
          "title": "Info"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/error/definitions/id"
        },
        "message": {
          "$ref": "#/definitions/error/definitions/message"
        }
      }
    },
    "material": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "MateriaBrasil - Material",
      "description": "A material is a raw material",
      "stability": "prototype",
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "unique identifier of the material",
          "readOnly": true,
          "type": [
            "integer"
          ]
        },
        "name": {
          "description": "the name of the material",
          "type": [
            "string"
          ]
        },
        "image_url": {
          "description": "a link to an image of the material",
          "type": [
            "string"
          ]
        },
        "description": {
          "description": "the description of the material",
          "type": [
            "string"
          ]
        },
        "average_price": {
          "description": "the average price of the material",
          "type": [
            "string"
          ]
        },
        "code": {
          "description": "the code of the material",
          "type": [
            "string"
          ]
        },
        "supplier_name": {
          "description": "the name of the materials' supplier",
          "type": [
            "string"
          ]
        },
        "supplier_contact": {
          "description": "the email of the material's supplier",
          "type": [
            "string"
          ]
        },
        "manufacturing_location": {
          "description": "the city/state where the material is manufactured",
          "type": [
            "string"
          ]
        },
        "sales_location": {
          "description": "the city/state where the material is sold",
          "type": [
            "string"
          ]
        },
        "technical_specification_url": {
          "description": "a link to the pdf file with the material's specifications",
          "type": [
            "string"
          ]
        },
        "properties": {
          "description": "the material's properties like type, shape and size",
          "type": [
            "string"
          ]
        },
        "usage": {
          "description": "how the material can be used",
          "type": [
            "string"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/material/definitions/id"
            }
          ]
        }
      },
      "links": [
        {
          "description": "List materials.",
          "href": "/materials",
          "method": "GET",
          "rel": "index",
          "targetSchema": {
            "anyOf": [
              {
                "type": [
                  "array"
                ],
                "items": {
                  "$ref": "#/definitions/material"
                }
              },
              {
                "$ref": "#/definitions/error"
              }
            ]
          },
          "title": "List",
          "schema": {
            "strictProperties": true,
            "properties": {
            },
            "type": [
              "object"
            ]
          }
        },
        {
          "description": "Info for existing material.",
          "href": "/materials/{(%23%2Fdefinitions%2Fmaterial%2Fdefinitions%2Fidentity)}",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "anyOf": [
              {
                "$ref": "#/definitions/material"
              },
              {
                "$ref": "#/definitions/error"
              }
            ]
          },
          "title": "Info",
          "schema": {
            "strictProperties": true,
            "properties": {
            },
            "type": [
              "object"
            ]
          }
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/material/definitions/id"
        },
        "name": {
          "$ref": "#/definitions/material/definitions/name"
        },
        "image_url": {
          "$ref": "#/definitions/material/definitions/image_url"
        },
        "description": {
          "$ref": "#/definitions/material/definitions/description"
        },
        "code": {
          "$ref": "#/definitions/material/definitions/code"
        },
        "average_price": {
          "$ref": "#/definitions/material/definitions/average_price"
        },
        "supplier_name": {
          "$ref": "#/definitions/material/definitions/supplier_name"
        },
        "supplier_contact": {
          "$ref": "#/definitions/material/definitions/supplier_contact"
        },
        "manufacturing_location": {
          "$ref": "#/definitions/material/definitions/manufacturing_location"
        },
        "sales_location": {
          "$ref": "#/definitions/material/definitions/sales_location"
        },
        "technical_specification_url": {
          "$ref": "#/definitions/material/definitions/technical_specification_url"
        },
        "properties": {
          "$ref": "#/definitions/material/definitions/properties"
        },
        "usage": {
          "$ref": "#/definitions/material/definitions/usage"
        }
      },
      "required": [
        "id",
        "name",
        "image_url",
        "description",
        "average_price",
        "code",
        "supplier_name",
        "supplier_contact",
        "manufacturing_location",
        "sales_location",
        "technical_specification_url",
        "properties",
        "usage"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "comment": {
      "$ref": "#/definitions/comment"
    },
    "error": {
      "$ref": "#/definitions/error"
    },
    "material": {
      "$ref": "#/definitions/material"
    }
  },
  "description": "The API for MateriaBrasil",
  "id": "materiabrasil-api",
  "links": [
    {
      "href": "https://api.materiabrasil.com",
      "rel": "self"
    }
  ],
  "title": "MateriaBrasil - API"
}
